<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="quiteDarkColor">@color/colorPrimary</item>
        <item name="darkColor">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="quiteDarkColor">@color/QuiteNightBackgroundColor</item>
        <item name="darkColor">@color/NightBackgroundColor</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="TextStyle" parent="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/example</item>
    </style>

    <style name="SmallImageStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

</resources>
